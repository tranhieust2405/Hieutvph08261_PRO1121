<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_task_priority"
        android:layout_toStartOf="@id/text_task_priority"
        android:padding="@dimen/activity_half_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorText"
        tools:text="Task Name" />

    <TextView
        android:id="@id/text_task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_task_date"
        android:layout_toStartOf="@id/text_task_date"
        android:padding="@dimen/activity_half_vertical_margin"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="MEDIUM"
        tools:textColor="@color/colorPriorityMedium" />

    <TextView
        android:id="@id/text_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_half_vertical_margin"
        android:textStyle="italic"
        tools:text="YYYY-MM-DD" />
</RelativeLayout>